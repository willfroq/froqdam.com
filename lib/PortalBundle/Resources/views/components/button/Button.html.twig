<button 
    {{ attributes }}
    class="inline-flex items-center justify-center rounded-lg font-semibold
           {% if variant == 'primary' %}bg-teal-600 text-white hover:bg-teal-700
           {% elseif variant == 'secondary' %}bg-white text-gray-700 border border-gray-200 hover:bg-gray-50
           {% endif %}
           {% if size == 'sm' %}px-3 py-2 text-sm
           {% elseif size == 'md' %}px-4 py-2.5 text-base
           {% elseif size == 'lg' %}px-5 py-3 text-lg
           {% endif %}
           {% if disabled %}opacity-50 cursor-not-allowed{% endif %}"
    {% if disabled %}disabled{% endif %}
>
    {% if hasIcon and iconPosition == 'left' %}
        <span class="mr-2">{{ block('icon') }}</span>
    {% endif %}
    
    {{ block('content') }}
    
    {% if hasIcon and iconPosition == 'right' %}
        <span class="ml-2">{{ block('icon') }}</span>
    {% endif %}
</button> 