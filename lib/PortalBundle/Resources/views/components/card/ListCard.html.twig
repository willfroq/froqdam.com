<div class="bg-white rounded-md shadow-sm transition-all duration-200 hover:shadow-md">
    <div class="p-4 flex">
        <div class="flex-shrink-0 mr-4 w-24">
            {% if this.imagePath %}
                <img 
                    src="{{ this.imagePath }}" 
                    alt="{{ this.name }}" 
                    class="max-h-24 max-w-24 object-contain"
                >
            {% else %}
                <div class="h-24 w-24 bg-gray-100 flex items-center justify-center">
                    <span class="text-gray-400 text-xs">No image</span>
                </div>
            {% endif %}
        </div>
        
        <div class="flex-grow">
            <h5 class="text-lg font-medium text-gray-800 mb-1">{{ this.name }}</h5>
            <p class="text-xs text-gray-500">{{ this.markets|join(', ') }}</p>
        </div>
    </div>
</div>