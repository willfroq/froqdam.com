<div class="space-y-2 {{ class }}">
    {# Title Label #}
    <div class="flex items-center justify-between w-full text-left py-2">
        <span class="text-md font-medium text-dark-900">{{ label }}</span>
        <svg 
            class="w-4 h-4 text-gray-500"
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor"
        >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
    </div>

    {# Date Range Inputs #}
    <div class="grid grid-cols-2 gap-4">
        {# From date #}
        <div class="space-y-1.5">
            <label class="block text-sm font-medium text-dark-600">From</label>
            <input 
                type="date" 
                class="block w-full rounded border-gray-200 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
                value="{{ fromDate }}"
            >
        </div>

        {# To date #}
        <div class="space-y-1.5">
            <label class="block text-sm font-medium text-dark-600">To</label>
            <input 
                type="date" 
                class="block w-full rounded border-gray-200 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
                value="{{ toDate }}"
            >
        </div>
    </div>
</div> 