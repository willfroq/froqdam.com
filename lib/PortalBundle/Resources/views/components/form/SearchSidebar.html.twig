<div id="search-sidebar"
     class="relative"
     data-filtername={{ filterName }}
>
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#8A939A]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
    </div>
    <label>
        {% set currentFilters = app.request.query.get('filters')|keys %}

        <input
            id="search-sidebar-input-{{ filterName }}"
            data-filter-name="{{ filterName }}"
            data-sidebar-search-input="sidebarSearchInput"
            data-search-target="sidebarSearchInput"
            type="text"
            class="{{ this.size == 'sm' ? 'py-1.5 text-sm' : 'py-2 text-base' }} pl-10 pr-4 block w-full rounded-lg outline-none {{ class }}"
            placeholder="{{ this.placeholder }}"
            value="{{ searchTerm }}"
            style="border: 1px solid #E4E7EC; transition: all 0.2s ease-in-out;"
            onFocus="this.style.border='1px solid #00B5A0'; this.style.boxShadow='0px 0px 0px 4px rgba(231, 247, 245, 0.8)'"
            onBlur="this.style.border='1px solid #E4E7EC'; this.style.boxShadow='none'"
        >
    </label>
</div>