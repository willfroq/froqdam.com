<div class="px-5 py-3 border-t border-[#E4E7EC]">
    <twig:Accordion id="accordion-{{ title|lower }}" title="{{ title }}" :expanded="expanded">
        <div class="mb-3">
            <twig:SearchInput 
                placeholder="Look for a {{ title|lower }}"
                size="sm"
                class="w-full bg-white border border-[#E4E7EC] rounded-lg text-[#8A939A] text-14 leading-20 tracking-normal"
            />
        </div>
        
        <div class="space-y-2">
            <twig:CheckboxList 
                :items="items" 
                :selectedItem="selectedItem"
                class="text-[#171B3F] text-14 leading-20"
            />
        </div>
        
        <button class="mt-3 text-[#009383] text-14 font-semibold leading-20 hover:text-[#007A6D]">
            View all ({{ items|length }})
        </button>
    </twig:Accordion>
</div>