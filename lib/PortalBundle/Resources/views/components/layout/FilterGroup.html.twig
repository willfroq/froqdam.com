<div class="px-5 py-3">
    {# Header with arrow #}
    <button 
        @click="open = !open"
        type="button"
        class="flex items-center justify-between w-full text-left group"
    >
        <span class="text-sm font-medium text-gray-900 group-hover:text-gray-600">{{ title }}</span>
        <svg 
            class="w-4 h-4 text-gray-500 transition-transform duration-200"
            :class="{ 'rotate-180': open }"
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor"
        >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
    </button>

    {# Filter content #}
    <div x-show="open" class="mt-3 space-y-2">
        {# Search input #}
        <div class="relative">
            <input 
                type="text" 
                placeholder="{{ searchPlaceholder }}"
                class="w-full pl-8 pr-3 py-2 text-sm border border-gray-200 rounded-md 
                       placeholder-gray-400
                       focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                style="border: 1px solid #E0E0E0;"
            >
            <svg 
                class="absolute left-2.5 top-2.5 h-4 w-4 text-gray-400" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
            >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
        </div>

        {# Items list #}
        <div class="space-y-1">
            {% for item in items %}
                <div class="flex items-center {{ item == 'Amstel' ? 'bg-blue-50 rounded-md' : '' }}">
                    <input 
                        type="checkbox" 
                        id="{{ item|lower }}"
                        class="h-4 w-4 ml-1
                               text-blue-600 
                               border-gray-300 
                               rounded 
                               focus:ring-blue-500 
                               focus:ring-offset-0"
                        {# {% if item == 'Amstel' %}checked{% endif %} #}
                    >
                    <label 
                        for="{{ item|lower }}" 
                        class="ml-2 py-1 text-sm {{ item == 'Amstel' ? 'text-blue-900 font-medium' : 'text-gray-700' }}"
                    >
                        {{ item }}
                    </label>
                </div>
            {% endfor %}
        </div>

        {# View all link #}
        {% if items|length > 0 %}
            <button 
                type="button"
                class="text-sm text-[#009383] hover:text-[#009383] flex items-center font-medium"
            >
                View all ({{ items|length }})
                <svg 
                    class="ml-1 w-4 h-4" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
            </button>
        {% endif %}
    </div>
</div> 