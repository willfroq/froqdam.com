<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 !gap-[8px] {{ class }}">
    {% for item in items %}
        <twig:GridCard
            title="{{ item.title }}"
            markets="{{ item.markets }}"
            imageUrl="{{ item.imageUrl }}"
            :id="item.id"
        />
    {% endfor %}
</div> 