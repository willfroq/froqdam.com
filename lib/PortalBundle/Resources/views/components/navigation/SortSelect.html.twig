{# Button trigger #}
<div class="relative" x-data="{ open: false }">
    <button 
        @click="open = !open"
        type="button" 
        class="flex items-center gap-2 text-sm font-medium bg-white px-4 py-2 h-[42px] min-w-[180px] rounded-lg border border-gray-200 hover:bg-gray-50"
        style="border: 1px solid #E4E7EC;"
    >
        <span class="text-gray-400 text-[#6C757D]">Sort by:</span>
        <span class="font-medium text-[#171B3F]">{{ selected }}</span>
        <svg 
            class="w-4 h-4 text-gray-500 transition-transform ml-auto" style="margin-left: 20px;"
            :class="{ 'rotate-180': open }"
            fill="none" 
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
    </button>

    {# Dropdown menu #}
    <div 
        x-show="open"
        @click.outside="open = false"
        class="absolute right-0 z-10 w-full mt-1 bg-white rounded-lg shadow-lg border border-gray-200"
        style="display: none;"
    >
        <ul class="py-1">
            {% for item in items %}
                <li>
                    <a 
                        href="#" 
                        class="block px-4 py-2 text-sm hover:bg-gray-50 {{ selected == item ? 'bg-gray-50' : '' }}"
                    >
                        {{ item }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div> 