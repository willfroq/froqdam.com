<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/html">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="initial-scale=1">
        <title>{% block title %} FroQ Portal {% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ mix('build/portal/dist/styles.css') }}">
        {% endblock %}

        {% block javascript_head %}
            {%  if app.request.get('_route') == 'froq_portal.asset_library.detail' or app.request.get('_route') == 'froq_dashboard.messenger' %}
                <script type="text/javascript" src="{{ mix('build/portal/dist/bundle.js') }}"></script>
            {% endif %}

            {%  if app.request.get('_route') == 'froq_portal.asset_library.search' or app.request.get('_route') == 'froq_portal.colour_library.search' or app.request.get('_route') == 'froq_portal.colour_library.detail' %}
                <script type="text/javascript" src="{{ mix('build/stimulus/bootstrap.js') }}"></script>
            {% endif %}
        {% endblock %}
    </head>

    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
